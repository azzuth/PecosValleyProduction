<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta/css/bootstrap.min.css" integrity="sha384-/Y6pD6FV/Vv2HJnA6t+vslU6fwYXjCFtcEpHbNJ0lyAFsXTsjBbfaDjzALeQsN6M" crossorigin="anonymous">
    <link rel="stylesheet" href="//cdn.materialdesignicons.com/2.0.46/css/materialdesignicons.min.css" />
    <link rel="stylesheet" href="~/Content/Site.css" />


</head>
<body>
    @{ 
        var onHomePage = ViewBag.Title == "Home Page";
    }
    @if (onHomePage)
    {
        <div class="container-fluid text-center text-light bg-secondary pb-5 pt-3">
            <h2>Pecos Valley Pharmaceuticals</h2>
            <p>Welcome image goes here</p>
        </div>
    }

    <nav class="navbar  @(onHomePage ? "" : "fixed-top") navbar-expand-lg navbar-dark bg-dark">
        <a class="navbar-brand" href="@Url.Action("Index","Home")"><i class="mdi mdi-cannabis"></i> PvP</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarTogglerDemo02" aria-controls="navbarTogglerDemo02" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarTogglerDemo02">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item active">
                    <a class="nav-link" href="@Url.Action("Menu", "Home")">See Our Menu </a>
                </li>

                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" id="navbarDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        Contact Us
                    </a>
                    <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                        <a class="dropdown-item" href="@Url.Action("Contact","Home")#contactRequest">Ask us a question</a>
                        <a class="dropdown-item" href="@Url.Action("Contact","Home")#comment">Review Us!</a>
                        <a class="dropdown-item" href="@Url.Action("SocialMedia","Home")">Social Media</a>
                        @*<a class="dropdown-item" href="#">Apply for Employment</a>*@
                        <a class="dropdown-item" href="@Url.Action("Reviews","Home")">Comments and Reviews</a>
                    </div>
                </li>
                <li class="nav-item"><a class="nav-link" href="@Url.Action("Videos", "Home")">Videos</a></li>
                <li class="nav-item"><a class="nav-link" href="@Url.Action("Resources", "Home")">Resources</a></li>
                <li class="nav-item"><a class="nav-link" href="@Url.Action("FAQ", "Home")">FAQ</a></li>

                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="http://example.com" id="navbarDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        Admin
                    </a>
                    <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                        <a class="dropdown-item" href="@Url.Action("Locations","Admin")"><i class="mdi mdi-map-marker-multiple"></i> Locations</a>
                        <a class="dropdown-item" href="@Url.Action("Reviews","Admin")"><i class="mdi mdi-comment"></i> Manage Reviews</a>
                    </div>
                </li>

            </ul>
            <ul class="navbar-nav ml-auto">

                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="" id="navbarDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        <i class="mdi mdi-home"></i> Locations
                    </a>
                    <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                        <a class="dropdown-item" href="#">Carlsbad</a>
                        <a class="dropdown-item" href="#">Roswell</a>
                        <a class="dropdown-item" href="#">Las Cruses</a>
                    </div>
                </li>

                <li class="nav-item">
                </li>

                @Html.Partial("_LoginPartial")
            </ul>
         
        </div>
    </nav>

    <div class="pt-0">
        @RenderBody()
        @Html.Partial("_Footer")
    </div>


    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.2.1.min.js" integrity="sha256-hwg4gsxgFZhOsEEamdOYGBf13FyQuiTwlAQgxVSNgt4=" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.11.0/umd/popper.min.js" integrity="sha384-b/U6ypiBEHpOf/4+1nzFpr53nxSS+GLCkfwBdFNTxtclqqenISfwAzpKaMNFNmj4" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta/js/bootstrap.min.js" integrity="sha384-h0AbiXch4ZDo7tp9hKZ4TsHbi047NrKGLO3SEJAg45jXxnGIfYzk4Si90RDIqNm1" crossorigin="anonymous"></script>
    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyA0TauAkhQMOI-v0zlRgWsquI73VjB-3C8&callback=initMap" async defer></script>
    
    <script>
        $.ajax({
            'url': "@Url.Action("LocationFooter", "Home")"
            , 'method': 'GET'
            , 'success': function (data) {
                $('#footerLocationMap').html(data)
                initMap();
            }
        })
    </script>
    
    <script src="~/Scripts/googleMap.js"></script>
    @RenderSection("scripts", required: false)

    <script>

    </script>


</body>
</html>

