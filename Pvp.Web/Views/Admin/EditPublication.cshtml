
@using Pvp.Web.AppLogic.Models.DTO
@model Publication

<div class="container">
    @using (Html.BeginForm("EditPublication", "Admin", FormMethod.Post))
    {


        @Html.Partial("_publicationForm", Model)

        <button type="submit" class="btn btn-success float-left"><i class="mdi mdi-content-save"></i> Save Changes</button>
    }
    @using (Html.BeginForm("DeletePublication", "Admin", FormMethod.Post))
    {
        @Html.HiddenFor(m => m.Id)
        <button type="submit" class="btn btn-danger float-right"><i class="mdi mdi-delete"></i></button>
    }
</div>
